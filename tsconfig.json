{
  "compileOnSave": true,
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "jsx": "react",
    "noEmit": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@utils": [
        "./src/utils/index.js"
      ],
      "@services": [
        "./src/services/index.js"
      ],
      "@libs": [
        "./src/libs/index.js"
      ],
      "@config": [
        "./src/config/index.js"
      ],
    }
  }
}
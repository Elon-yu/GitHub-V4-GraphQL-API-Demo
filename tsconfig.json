{
  "compileOnSave": true,
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "jsx": "react",
    "noEmit": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@utils": [
        "utils/*"
      ],
      "@services": [
        "services/*"
      ],
      "@libs": [
        "libs/*"
      ],
    }
  }
}